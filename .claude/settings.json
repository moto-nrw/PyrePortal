{
  "permissions": {
    "deny": [
      "Write(./.env)",
      "Write(./.env.*)",
      "Read(./node_modules/**)",
      "Read(./dist/**)",
      "Read(./build/**)",
      "Read(./src-tauri/target/**)",
      "Read(./rfid-dev.log)",
      "Read(./**/app_*.log)"
    ],
    "ask": [
      "Bash(npm install:*)",
      "Bash(rm -rf:*)",
      "Bash(git push:*)",
      "Bash(docker:*)",
      "Write(package.json)",
      "Write(tsconfig.json)",
      "Write(Cargo.toml)",
      "Write(tailwind.config.js)",
      "Write(vite.config.ts)",
      "Write(eslint.config.js)",
      "Write(prettier.config.js)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/format-typescript.sh"
          },
          {
            "type": "command",
            "command": ".claude/hooks/lint-fix.sh"
          }
        ]
      }
    ]
  }
}
